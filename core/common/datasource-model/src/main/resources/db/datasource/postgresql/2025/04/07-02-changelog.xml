<databaseChangeLog
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
	objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS"
	logicalFilePath="db/datasource/2025/04/07-02-changelog.xml"
>

	<changeSet id="1744038673298-1" author="openk9">
		<addColumn tableName="large_language_model">
			<column name="type" type="VARCHAR(255)" defaultValue="">
				<constraints nullable="false"/>
			</column>
			<column name="model" type="VARCHAR(255)" defaultValue="">
				<constraints nullable="false"/>
			</column>
			<column name="context_window" type="INTEGER"/>
			<column name="retrieve_citations" type="BOOLEAN"/>
		</addColumn>
	</changeSet>

	<changeSet id="1744038673298-2" author="openk9">
		<addDefaultValue tableName="embedding_model" columnName="type" defaultValue=""/>
		<addDefaultValue tableName="embedding_model" columnName="model" defaultValue=""/>
	</changeSet>

</databaseChangeLog>