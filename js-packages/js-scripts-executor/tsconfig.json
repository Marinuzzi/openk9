{
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "lib": ["ESNext", "dom"],
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"]
}
