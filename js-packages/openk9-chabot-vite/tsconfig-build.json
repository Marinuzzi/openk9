{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "declaration": true, // Genera file .d.ts
    "emitDeclarationOnly": false, // Emette sia .js che .d.ts
    "outDir": "./dist", // Directory di output
    "declarationDir": "./dist/types", // Directory di output per i file .d.ts
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["lib"]
}
